<li id="comment-<%= comment._id %>">
        <p>
            <%= comment.content %>
            <br>
            <small>
                <%= comment.user.name %>
            </small>
            
            <!--used to  display the likes of comment, if the user is logged in, then show the link to toggle likes, else, just show the count -->
            <small>
                <% if (locals.user){ %>
                    <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                            <%= comment.likes.length %> Likes
                    </a>
                <% }else{ %>
                    <%= comment.likes.length %> Likes
                <% } %>
            </small>

        </p>    

</li>  

